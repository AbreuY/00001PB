<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/headertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESIGN" />

        <TextView
            android:id="@+id/headerDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Layout Properties"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ButtonLayout"
            android:layout_toEndOf="@+id/ButtonLayout" />

        <Button
            android:id="@+id/ButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="layout"
            android:layout_below="@+id/headerDescription"/>
        <Button
            android:id="@+id/ButtonBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="background"
            android:layout_alignTop="@+id/ButtonLayout"
            android:layout_toRightOf="@+id/ButtonLayout"
            android:layout_toEndOf="@+id/ButtonLayout" />
        <Button
            android:id="@+id/ButtonFonts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fonts"
            android:layout_below="@+id/headerDescription"
            android:layout_toRightOf="@+id/ButtonBackground"
            android:layout_toEndOf="@+id/ButtonBackground" />

        <TextView
            android:id="@+id/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="layoutlist"
            android:layout_below="@id/ButtonLayout"
            android:layout_marginTop="10dp"/>
        <com.meetme.android.horizontallistview.HorizontalListView
            android:id="@+id/hlvCustomList"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="@android:color/white"
            android:divider="@color/orange"
            android:visibility="gone"
            android:layout_below="@id/ButtonLayout"
            android:layout_alignLeft="@+id/h1"/>
